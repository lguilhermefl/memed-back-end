// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  tests        Tests[]
  appointments Appointments[]

  @@map("users")
}

model Tests {
  id        Int          @id @default(autoincrement())
  title     String
  notes     String?
  date      DateTime?    @default(now()) @db.Date
  user      Users        @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime     @default(now())
  testFiles TestsFiles[]

  @@map("tests")
}

model TestsFiles {
  id        Int      @id @default(autoincrement())
  name      String
  key       String   @unique
  size      Int
  url       String   @unique
  test      Tests    @relation(fields: [testId], references: [id])
  testId    Int
  createdAt DateTime @default(now())

  @@map("testsFiles")
}

model Appointments {
  id               Int                 @id @default(autoincrement())
  title            String
  notes            String?
  date             DateTime?           @default(now()) @db.Date
  user             Users               @relation(fields: [userId], references: [id])
  userId           Int
  createdAt        DateTime            @default(now())
  appointmentFiles AppointmentsFiles[]

  @@map("appointments")
}

model AppointmentsFiles {
  id            Int          @id @default(autoincrement())
  name          String
  key           String       @unique
  size          Int
  url           String       @unique
  appointment   Appointments @relation(fields: [appointmentId], references: [id])
  appointmentId Int
  createdAt     DateTime     @default(now())

  @@map("appointmentsFiles")
}
